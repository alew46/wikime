<%= form_for(@wiki) do |f| %>
  <% if @wiki.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wiki.errors.count, "error") %> prohibited this wiki from being saved:</h2>

      <ul>
      <% @wiki.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, style: "width:50%" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, :rows => "10", style: "width:80%" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :private, "Make this wiki private:" %><br>
    <%= f.check_box :private %>
  </div>
  </br>
  <div class="actions">
    <%= f.submit "Save Wiki", :class => "btn btn-primary" %>
  </div>
<% end %>
